<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>KAR Reefer Actors App</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>kar-connection-timeout-millis</param-name>
		<param-value>600000</param-value>
	</context-param>
	<context-param>
		<param-name>kar-actor-classes</param-name>
		<param-value>
            com.ibm.research.kar.reefer.actors.OrderActor,
			com.ibm.research.kar.reefer.actors.ReeferActor,
			com.ibm.research.kar.reefer.actors.VoyageActor,
			com.ibm.research.kar.reefer.actors.ReeferProvisionerActor,
			com.ibm.research.kar.reefer.actors.RestHelper
		</param-value>
	</context-param>
		<context-param>
			<param-name>kar-actor-types</param-name>
			<param-value>order,reefer,voyage,reefer-provisioner,resthelper</param-value>
		</context-param>
</web-app>
